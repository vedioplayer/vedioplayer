<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/item_videolist_add"
                    android:visibility="gone"
            >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="add"
                  android:textSize="18sp"
                  android:textColor="@android:color/white"
                  android:layout_centerInParent="true"
                  android:gravity="center_horizontal"
                  android:paddingTop="10dip"
                  android:paddingBottom="10dip"
                />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/item_videolist_item"
                    android:visibility="gone"
            >
        <ImageView android:layout_width="50dip"
                   android:layout_height="50dip"
                   android:id="@+id/item_videolist_img"
                   android:layout_marginLeft="5dip"
                   android:layout_marginTop="5dip"
                   android:layout_marginRight="5dip"
                   android:layout_centerVertical="true"
                />

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/item_videolist_img"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_centerVertical="true"
                >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/item_videolist_name"
                      android:textSize="14sp"
                      android:textColor="@android:color/white"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/item_videolist_path"
                      android:textSize="14sp"
                      android:textColor="@android:color/white"
                      android:layout_below="@id/item_videolist_name"
                      android:layout_marginTop="10dip"
                    />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>